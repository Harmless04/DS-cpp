class Solution {
public:
    string predictPartyVictory(string senate) {
  queue<int> radiant;
        queue<int> dire;
        int n = senate.size();

        // Step 1: Fill both queues with the indices of each senator
        for (int i = 0; i < n; i++) {
            if (senate[i] == 'R')
                radiant.push(i);
            else
                dire.push(i);
        }

        // Step 2: Simulate rounds until one party runs out
        while (!radiant.empty() && !dire.empty()) {
            int r = radiant.front(); radiant.pop();
            int d = dire.front(); dire.pop();

            if (r < d) {
                // Radiant acts first and bans Dire senator
                radiant.push(r + n);  // move R to the end of next round
            } else {
                // Dire acts first and bans Radiant senator
                dire.push(d + n);
            }
        }

        // Step 3: Return the winner
        return radiant.empty() ? "Dire" : "Radiant";
    }
};