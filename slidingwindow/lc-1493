class Solution{

    public:
    int longestSubarray(vector<int>& nums){
        int n = nums.size();
        int left=0;
        int right=0;
        int zcnt=0;
        int maxlen =0;
        for(right=0;right<n;right++;){
            if(nums[right]==0)
            cnt++;

            while(cnt>1){
                if(nums[left==0])
                zcnt--;
                left++;
            }
            maxlen=max(maxlen , right-left);
        }
    } 
};